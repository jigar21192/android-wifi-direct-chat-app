<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Main_Page">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bluetooth"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/but_round"
            android:drawableLeft="@drawable/ic_bluetooth_audio_black_24dp"
            android:padding="15dp" />


        <Button
            android:id="@+id/wifi"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_alignTop="@+id/bluetooth"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/but_round"
            android:drawableLeft="@drawable/ic_wifi_black_30dp"
            android:padding="15dp" />

        <Button
            android:id="@+id/setting"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/bluetooth"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:background="@drawable/but_round"
            android:drawableLeft="@drawable/ic_settings_black_30dp"
            android:padding="15dp" />
    </RelativeLayout>


</LinearLayout>