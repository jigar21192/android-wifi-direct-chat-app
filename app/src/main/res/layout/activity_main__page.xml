<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Page">

    <Button
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:background="@drawable/but_round"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/bluetooth"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="304dp"
        android:background="@drawable/but_round"
        android:drawableLeft="@drawable/ic_bluetooth_audio_black_24dp"
        android:padding="15dp" />


    <Button
        android:id="@+id/wifi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="205dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="298dp"
        android:background="@drawable/but_round"
        android:drawableLeft="@drawable/ic_wifi_black_30dp"
        android:padding="15dp" />

    <Button
        android:id="@+id/setting"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/bluetooth"

        android:layout_centerInParent="true"
        android:layout_marginTop="-11dp"
        android:background="@drawable/but_round"
        android:drawableLeft="@drawable/ic_settings_black_30dp"
        android:padding="15dp" />


</RelativeLayout>